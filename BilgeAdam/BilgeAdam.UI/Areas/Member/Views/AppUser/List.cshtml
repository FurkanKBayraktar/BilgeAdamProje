
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<BilgeAdam.Model.Model.Entities.AppUser>


<div class="container-fluid">
    <a href="@Url.Action("Add","AppUser",new { area="Member"})"><div class="btn btn-bitbucket"><i class="ion ion-person-add"></i> Yeni Personel Ekle </div></a>
            <div class="box panel-body">
                <div class="col-lg-12">
                    <div class="inner">
                        <h3 class="text-teal">Personel Listesi</h3>
                        <hr />

                        <div class="table-responsive">
                            <table class="table table-hover table-bordered table-striped ">
                                <thead>
                                    <tr>
                                        <th>Fotoğraf</th>
                                        <th>Tc Kimlik No</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Şifre</th>
                                        <th>Adı</th>
                                        <th>Soyadı</th>
                                        <th>Maaş</th>
                                        <th>Cinsiyet</th>
                                        <th>E-Posta</th>
                                        <th>Telefon</th>
                                        <th>Adres</th>
                                        <th>İlçe</th>
                                        <th>Şehir</th>
                                        <th>Ülke</th>
                                        <th>Doğum Tarihi</th>
                                        <th>Departman</th>
                                        <th>Şube</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><img src="@item.ImagePath" style="display:inline-block" height="30" /></td>
                                            <td>@item.IdentityNumber</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Password</td>
                                            <td>@item.Name</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Salary</td>
                                            <td>@item.Gender</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Address</td>
                                            <td>@item.District</td>
                                            <td>@item.City</td>
                                            <td>@item.Country</td>
                                            <td>@item.Birthdate</td>
                                            <td>@item.Department.DepartmentName</td>
                                            <td>@item.Store.Name</td>
                                            <th>
                                                <div class="btn btn-justified btn-block text-nowrap ">
                                                    <a href="/Member/AppUser/Update/@item.ID" class="btn btn-success"><i class="fa fa-pencil-square-o"></i> Güncelle </a><a href="/Member/AppUser/Delete/@item.ID" class="btn btn-danger"><i class="fa fa-times"></i> Sil </a>
                                                </div>

                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="pagedList">
                        @Html.PagedListPager(Model, page => Url.Action("List", "AppUser", new { page }), PagedListRenderOptions.TwitterBootstrapPager)
                    </div>
                </div>
            </div>
        </div>
