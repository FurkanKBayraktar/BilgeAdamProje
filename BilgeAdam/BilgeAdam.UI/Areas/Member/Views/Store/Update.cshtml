
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using BilgeAdam.Model.Model.Entities
@model BilgeAdam.UI.Areas.Member.Models.DTO.StoreVM

<form action="~/Member/Store/Update" method="post">
    <div class="container-fluid">
        <div class="box panel-body">
            <h2 class="text-teal"><i class="fa fa-user"></i>Şube Bilgilerini Güncelle</h2>
            <div class="inner">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Şube Bilgileri</h3>
                            <hr />
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name">
                                        Şube Adı
                                    </label>
                                    <input type="text" name="Name" class="form-control" value="@Model.Name" />
                                </div>
                                <div class="form-group">
                                    <label for="Address">
                                        Adres
                                        <textarea class="form-control" name="Address" rows="4" cols="100" placeholder="Adres Giriniz...">@Model.Address</textarea>
                                    </label>
                                </div>

                                <div class="form-group">
                                    <label for="Phone">
                                        Telefon
                                    </label>
                                    <input type="text" name="Phone" class="form-control" value="@Model.Phone" />
                                </div>
                                <div class="form-group">
                                    <label for="Email">
                                        E-Posta
                                    </label>
                                    <input type="text" name="Email" class="form-control" value="@Model.Email" />
                                </div>
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.ID);
                    </div>
                    <div class="footer col-lg-3">
                        <input type="submit" class="form-control btn btn-bitbucket fa fa-floppy-o" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif" value="Güncelle" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



