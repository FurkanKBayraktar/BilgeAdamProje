
@{
    ViewBag.Title = "ListCount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<BilgeAdam.Model.Model.Entities.Product>

<div class="container-fluid">
    <div class="box panel-body">
        <div class="col-lg-12">
            <h3 class="text-teal">Ürün Listesi</h3>
            <hr />
            @using (Html.BeginForm("ListCount", "Product", FormMethod.Get))
            {
                @Html.TextBox("searching", "", new { style = "width:90%", placeholder = "Ara.." })<input type="submit" style="width:10%;color:teal" value="Search" />
            }
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Barkod</th>
                        <th>Ürün Kodu</th>
                        <th>Ürün Adı</th>
                        <th>Stok Miktarı</th>
                        <th>Tedarikçi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Barcode</td>
                            <td>@item.ProductCode</td>
                            <td>@item.Name</td>
                            <td>@item.UnitsInStock</td>
                            <td>@item.Supplier.Name</td>
                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>


