
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<BilgeAdam.Model.Model.Entities.Customer>


<div class="container-fluid">
    <a href="@Url.Action("Add","Customer",new { area="Member"})"><div class="btn btn-bitbucket"><i class="ion ion-person-add"></i> Yeni Müşteri Ekle </div></a>
    <div class="box panel-body">
        <div class="col-lg-12">
            <h3 class="text-teal">Müşteri Listesi</h3>
            <hr />
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Müşteri Kodu</th>
                        <th>Adı Soyadı</th>
                        <th>Yetkili</th>
                        <th>Adres</th>
                        <th>Vergi No/Tc Kimlik No</th>
                        <th>Vergi Dairesi</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>İlçe</th>
                        <th>Şehir</th>
                        <th>Ülke</th>
                        <th class="col-lg-2">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerCode</td>
                            <td>@item.Name</td>
                            <td>@item.ContactName</td>
                            <td>@item.Address</td>
                            <td>@item.TaxNumber</td>
                            <td>@item.Tax</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.District</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <th>
                                <div class="btn btn-justified btn-block text-nowrap">
                                    <a href="/Member/Customer/Update/@item.ID" class="btn btn-success"><i class="fa fa-pencil-square-o"></i> Güncelle </a><a href="/Member/Customer/Delete/@item.ID" class="btn btn-danger"><i class="fa fa-times"></i> Sil </a>
                                </div>

                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagedList">
            @Html.PagedListPager(Model, page => Url.Action("List", "Customer", new { page }), PagedListRenderOptions.TwitterBootstrapPager)
        </div>
    </div>
</div>
