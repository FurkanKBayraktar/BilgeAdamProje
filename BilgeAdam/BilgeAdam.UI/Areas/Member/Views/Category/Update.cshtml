
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model BilgeAdam.UI.Areas.Member.Models.DTO.CategoryVM

<form action="~/Member/Category/Update" method="post">
    <div style="margin-bottom:100px;">
        <div class="container-fluid">
            <div class="box panel-body">
                <h2 class="text-teal"><i class="fa fa-pencil"></i>Kategori Güncelle</h2>
                <div class="inner">
                    <div class="col-lg-12">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ID">
                                    ID
                                </label>
                                <input type="text" name="ID" readonly class="form-control" value="@Model.ID" />
                            </div>

                            <div class="form-group">
                                <label for="Name">
                                    Isim
                                </label>
                                <input type="text" required name="Name" class="form-control" value="@Model.Name" />
                            </div>

                            <div class="form-group">
                                <label for="Name">
                                    Açıklama
                                </label>
                                <input type="text" name="Description" class="form-control" value="@Model.Description" />
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <input type="submit" class="form-control btn btn-bitbucket" value="Güncelle" />
                </div>
            </div>
        </div>
    </div>
</form>

