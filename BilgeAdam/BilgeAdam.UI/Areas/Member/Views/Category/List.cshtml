
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<BilgeAdam.Model.Model.Entities.Category>


<div class="container-fluid">
    <a href="@Url.Action("Add","Category",new { area="Member"})"><div class="btn btn-bitbucket"><i class="ion ion-person-add"></i> Yeni Ürün Kategorisi Ekle </div></a>
    <div class="box panel-body">
        <div class="col-lg-12">
            <h3 class="text-teal">Kategori Listesi</h3>
            <hr />
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="col-lg-3">İsim</th>
                        <th class="col-lg-6">Açıklama</th>
                        <th class="col-lg-3">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>

                            <th>
                                <div class="btn btn-justified btn-block text-nowrap">
                                    <a href="/Member/Category/Update/@item.ID" class="btn btn-success"><i class="fa fa-pencil-square-o"></i> Güncelle </a>
                                    <a href="/Member/Category/Delete/@item.ID" class="btn btn-danger"><i class="fa fa-times"></i> Sil </a>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagedList">
            @Html.PagedListPager(Model, page => Url.Action("List", "Category", new { page }), PagedListRenderOptions.TwitterBootstrapPager)
        </div>
    </div>
</div>
