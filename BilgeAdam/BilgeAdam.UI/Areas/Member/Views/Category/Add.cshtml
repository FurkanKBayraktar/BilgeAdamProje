
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form action="~/Member/Category/Add" method="post">
    <div class="container-fluid">
        <a href="@Url.Action("List","Category",new { area="Member"})"><div class="btn btn-bitbucket"><i class="fa fa-list"></i> Ürün Kategori Listesi </div></a>
        <div class="box panel-body">
            <h2 class="text-teal"><i class="fa fa-user"></i>Yeni Ürün Kategorisi Ekle</h2>
            <div class="inner">
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="col-lg-12">
                            <h3>Ürün Kategorileri</h3>
                            <hr />

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name">
                                        Isim
                                    </label>
                                    <input type="text" name="Name" class="form-control" value="" />
                                </div>

                                <div class="form-group">
                                    <label for="Description">
                                        Açıklama
                                    </label>
                                    <textarea class="form-control" name="Description" rows="4" cols="50" placeholder=""></textarea>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer col-lg-3">
                <input type="submit" class="form-control btn btn-bitbucket fa fa-floppy-o" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif" value="Kaydet" />
            </div>


        </div>
    </div>
</form>
