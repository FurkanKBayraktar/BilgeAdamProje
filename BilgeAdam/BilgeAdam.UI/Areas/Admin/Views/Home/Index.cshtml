        <div class="small-box bg-green">
            <div class="inner">
                <h2>Teknik Destek</h2>
            </div>
            <div class="icon">
                <i class="ion ion-wrench"></i>
            </div>
            <a href="#" class="small-box-footer">Kullanıcı Sorunları <i class="fa fa-arrow-circle-right"></i></a>
        </div>
